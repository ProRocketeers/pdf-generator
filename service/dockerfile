# üõ†Ô∏è Pou≈æij ofici√°ln√≠ Go image pro build
FROM golang:1.24 AS builder

ARG PORT
ARG HOST
ARG BASE_PATH

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod tidy

COPY . .

ENV PORT=${PORT}
ENV HOST=${HOST}
ENV BASE_PATH=${BASE_PATH}

RUN go install github.com/swaggo/swag/cmd/swag@latest
RUN swag init -g main.go && swag fmt

RUN go build -o pdf-generator ./main.go

# üöÄ Pou≈æij lehƒç√≠ image pro bƒõh aplikace
FROM debian:bookworm-slim AS runtime

ARG PORT
ARG HOST
ARG BASE_PATH

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    ruby \
    ruby-dev \
    build-essential \
    ca-certificates \
    chromium \
 && rm -rf /var/lib/apt/lists/*

# Nejnovƒõj≈°√≠ verze, podpora roz≈°√≠≈ôen√≠ (nap≈ô. PDF, rouge)
# Pot≈ôebuje ruby, ruby-dev, build-essential
RUN gem install asciidoctor asciidoctor-pdf

ENV PORT=${PORT}
ENV HOST=${HOST}
ENV BASE_PATH=${BASE_PATH}

COPY --from=builder /app/pdf-generator .

EXPOSE ${PORT}

CMD ["./pdf-generator"]

APP_NAME = service

# Z√≠sk√°n√≠ posledn√≠ho tagu pro aplikaci, nap≈ô. service/v1.2.3 => v1.2.3
VERSION = $(shell git tag --sort=-creatordate | grep "^$(APP_NAME)/v" | head -n 1 | cut -d/ -f2)
VERSION := $(if $(VERSION),$(VERSION),dev)

LDFLAGS = -X 'main.Version=$(VERSION)'

.PHONY: build
build:
	@echo "üî® Building ${APP_NAME} with version ${VERSION}"
	go build -ldflags "$(LDFLAGS)" -o ./bin/
	@echo "‚úÖ Build completed"

.PHONY: run-build
run-build:
	@echo "Run last build..."
	@./bin/pdf-generator

.PHONY: run
run:
# @echo "Running the application..."
# go run main.go
# Run with air for hot reloading
	@echo "üèÉ Running the application with air... üí®"
	@air

.PHONY: gen-swagger
gen-swagger:
	@echo "Generating Swagger docs..."
	swag init -g main.go && swag fmt
	@echo "Swagger docs generated successfully."
